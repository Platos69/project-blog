<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Criar uma categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>Nome da categoria: {{nome}}</h4>
        <small>Tipo da categoria: {{slug}}</small><br>
        <small>Data de criação: {{data}}</small><br>
        <table>
            <tr>
                <td>
                    <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-2">Editar categoria</a>
                </td><td></td><td></td>
                <td>
                    <form action="/admin/categorias/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-danger mt-2 tdEspaco">Deletar categoria</button>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</div>
{{else}}
<hr>
<h4 class="mt-2">Não há categorias registradas</h4>
{{/each}}