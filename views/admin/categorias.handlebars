<h2>Lista de categorias</h2><hr> 
<a href="/admin/categorias/add"><button class="btn btn-success">Criar uma categoria</button></a>  

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome da categoria: {{nome}}</h4>
            <small>Tipo da categoria: {{slug}}</small><br>
            <small>Data de criação: {{data}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar categoria</button></a>
        </div>
    </div>
{{else}}

{{/each}}