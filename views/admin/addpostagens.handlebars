    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Criação de nova postagem</h2>
<div class="card"> 
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" placeholder="Título da postagem"><br>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" placeholder="Slug da postagem"><br>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição da postagem"><br>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" placeholder="Conteúdo da postagem"></textarea><br>
            <label for="categoria">Categorias: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form> 
    </div>
</div>